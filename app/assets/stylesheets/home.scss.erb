.hero {
  background: #000;
  background-image: url('<%=asset_path "dna-wide.png" %>');
  background-size: auto;
  background-repeat: no-repeat;
  background-position: right center;
  height: 300px;
  padding: 6em 0 0 10em;
  color: white;
  margin-bottom: 0px;
  h1.ui.header {
    width: 690px;
    margin: 0 auto;
    color: #fff;
    font-family: 'Noto Serif', serif;
    font-display: auto;
    line-height: 200%;
    font-weight: normal;
    font-size: 35px;
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
    .sub.header {
      font-family: 'Raleway', sans-serif;
      font-display: auto;
      font-size: 0.625em;
      color: rgba(255, 255, 255, 0.8);
    }
  }
}

.home-desc {
  h3 {
    font-family: 'Raleway', sans-serif;
    font-display: auto;
    font-size: 1.5em;   
    margin-top: 0.5em;
    margin-bottom: 0.5em; 
  }
  .row {
    margin-bottom: 2em;
  }
}