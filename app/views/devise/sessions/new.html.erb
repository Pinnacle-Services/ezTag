<h2>Please show you are not a robot</h2>
<script src='https://www.google.com/recaptcha/api.js'></script>
<style>
.ui.grid>.column+.divider, .ui.grid>.row>.column+.divider {
    left: 50%;
}
.bb {
  font-weight: bold;
  color: #00b5ad;
  text-decoration: underline;
}
.cc {
  font-weight: normal;
}
</style>
<h4 class="ui text information">
  <span class='bb'>LOGIN IS NOT REQUIRED</span> to use ezTag. However, you may choose to create an account using your email and password.
</h4>
<div class="ui two column very relaxed grid">
  <div class="column">
    <div class='ui segment'>
      <p>
        We use reCAPTCHA to protect our website from spam and abuse. Thank you.
      </p>
      <%= form_tag(generate_users_path, method: "POST", class:"ui form") do %>
        <%= recaptcha_tags %>
        <br>
        <button class="ui button fluid large pink">
          <i class='icon heart'></i>
          Continue without login
        </button>
      <% end %>
    </div>
  </div>
  <div class="column">
    <div class="ui segment">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui form'}) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="actions">
          <button class='ui fluid button primary'>
            <i class="icon sign in"></i> Log in with your email and password
          </button>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
